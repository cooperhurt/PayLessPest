@page "/bugs"
@model PayLessPest.indexModel
@{
    ViewData["Title"] = Model.currentBug == null ? "Common Bugs" : Model.currentBug.Name + " Pest Control";
}
<style>
    .jumbotron2 {
        background: #606060;
        color: #FFF;
        border-radius: 0px;
    }

    .jumbotron2-sm {
        padding-top: 24px;
        padding-bottom: 24px;
    }

    .jumbotron2 small {
        color: #FFF;
    }

    .h1 small {
        font-size: 24px;
    }

    .box {
        border: 1px solid #ccc;
        padding: 20px;
    }


    .mb-60 {
        margin-bottom: 60px;
    }

    .services-inner {
        border: 2px solid #48c7ec;
        margin-left: 35px;
        transition: .3s;
    }

    .our-services-img {
        float: left;
        margin-left: -36px;
        margin-right: 22px;
        margin-top: 28px;
    }

    .our-services-text {
        padding-right: 10px;
    }

    .our-services-text {
        overflow: hidden;
        padding: 28px 0 25px;
    }

        .our-services-text h4 {
            color: #222222;
            font-size: 18px;
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 8px;
            padding-bottom: 10px;
            position: relative;
            text-transform: uppercase;
        }

            .our-services-text h4::before {
                background: #ec6d48 none repeat scroll 0 0;
                bottom: 0;
                content: "";
                height: 1px;
                position: absolute;
                width: 35px;
            }

    .our-services-wrapper:hover .services-inner {
        background: #fff none repeat scroll 0 0;
        border: 2px solid transparent;
        box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.2);
    }

    .our-services-text p {
        margin-bottom: 0;
    }

    p {
        font-size: 14px;
        font-weight: 400;
        line-height: 26px;
        color: #666;
        margin-bottom: 15px;
    }

    .services_panel .panel {
        min-height: 377px;
        border: 1px solid #c22115;
        border-top: 3px solid #c22115 !important;
        background: #fbfbfb;
        margin-top: 10%;
    }

        .services_panel .panel img {
            width: 115px;
        }

        .services_panel .panel .btn {
            width: 235px;
            margin-top: 25px;
            color: #333;
            border-bottom: 3px solid #e6e6e6;
        }

            .services_panel .panel .btn:hover {
                border-bottom: 2px solid #e6e6e6;
            }
</style>
@if (Model.currentBug != null)
{
    <style>
            .jumbotron{
       background-image: url(@Model.currentBug.headerImage);
       background-size: cover;
    }
    </style>
    <div class="jumbotron">
        <h1 class="display-3 text-center text-white" style="padding-right: 0px;">@Model.currentBug.Name Pest Control Services</h1>
        <p class="lead text-center">@Model.currentBug.Descripition</p>
        <p class="text-center"><a class="btn btn-lg btn-success mb-3" href="#contactForm" role="button">Request a Quote</a></p>
    </div>
    <div class="container">
        <h1 class="btn btn-large btn-danger">@Model.currentBug.Name Pest Control</h1>
        <h5>Commonly found:</h5>
        <div class="locationFound pb-3">
            @foreach (var location in Model.currentBug.CommonlyFound)
            {
                <button type="button" class="btn btn-secondary"><i class="fa fa-plus"></i> @location</button>
            }
        </div>
        <span class="main-content mb-4 pb-4">
            @Model.currentBug.Descripition
        </span>


        @foreach (var subBug in Model.currentBug.subType)
        {
            <div class="card border border-danger flex-row flex-wrap pt-3 mt-3">
                <div class="card-header border-0">
                    <img src="@subBug.ImagePath" height="200" width="200" alt="@subBug.Name Utah">
                </div>
                <div class="card-block px-2">
                    <h4 class="card-title">@subBug.Name</h4>
                    <p class="card-text">@subBug.innerText</p>
                    <span class="center">
                        <a href="/bugs" class="btn btn-danger pr-3 mb-4">See other Bugs</a>
                        <a href="#contactForm" class="btn btn-success mb-4">Request Quote</a>
                    </span>
                </div>
                <div class="w-100"></div>

            </div>
        }

        <div class="container mt-5" id="contactForm">
            <div class="jumbotron2 jumbotron2-sm">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <h1 class="h1">
                                Contact us <small>Dont know what you need? Email us</small>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="well well-sm">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">
                                            Name *
                                        </label>
                                        <input type="text" class="form-control" id="name" placeholder="Enter name" required="required" />
                                    </div>
                                    <div class="form-group">
                                        <label for="email">
                                            Email Address *
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-envelope"></span>
                                            </span>
                                            <input type="email" class="form-control" id="email" placeholder="Enter email" required="required" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">
                                            Phone Number
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-envelope"></span>
                                            </span>
                                            <input type="email" class="form-control" id="email" placeholder="Enter email" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="subject">
                                            Subject*
                                        </label>
                                        <select id="subject" name="subject" class="form-control" required="required">
                                            <option value="na" selected="">Choose One:</option>
                                            <option value="Residential Service">Residential Services</option>
                                            <option value="Business Service">Buisness Service</option>
                                            <option value="Domestic Service">Domestic Service</option>
                                            <option value="Other Services">Other Services</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="subject">
                                            Perferred Contact *
                                        </label>
                                        <select id="perferredContact" name="subject" class="form-control" required="required">
                                            <option value="na" selected="">Choose One:</option>
                                            <option value="Email">Email</option>
                                            <option value="Call">Phone Call</option>
                                            <option value="Text">Text Message *(see side)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">
                                            Tell us about your pest problem *
                                        </label>
                                        <textarea name="message" id="message" class="form-control" rows="14" cols="25" required="required"
                                                  placeholder="Message"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                                        Send Message
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4">
                    <form>
                        <legend><span class="glyphicon glyphicon-globe"></span> Our office</legend>
                        <address>
                            <strong>PayLess Pest Control</strong><br>
                            Servicing Utah Area<br>
                            <abbr title="Phone">
                                P:
                            </abbr>
                            801-809-7533
                        </address>
                        <address>
                            <strong>Our Emails</strong><br>
                            <a href="mailto:services@paylesspest.com">services@paylesspest.com</a>
                        </address>

                        <address>
                            <strong>Text Message</strong>
                            <p>Msg & data rates may apply - We do not cover this expense</p>
                        </address>
                    </form>
                </div>
            </div>
        </div>


    </div>
}
else
{
    <div class="our_department_area">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-55">
                        <h3>Common Bugs & Rodents Treated</h3>
                        <p>
                            All common bugs/Rodents in Utah
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var bug in Model.bugs)
                {
                    <div class="col-xl-4 col-md-6 col-lg-4">
                        <a href="@Url.Page("index", new { bug = bug.Name })">
                            <div class="single_department">
                                <div class="department_thumb">
                                    <img src="@bug.ImagePath" alt="@bug.Name">
                                </div>
                                <div class="department_content">
                                    <h3><a href="@Url.Page("index", new { bug = bug.Name })">@bug.Name</a></h3>
                                    <p>@bug.shortDescription</p>
                                    <a href="@Url.Page("index", new { bug = bug.Name })" class="learn_more">Learn More</a>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}