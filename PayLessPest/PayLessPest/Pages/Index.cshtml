<!-- testmonial_area_start -->
<div class="testmonial_area">
    <div class="testmonial_active owl-carousel">

        @foreach (var review in Model.Reviews)
        {
        <div class="single-testmonial testmonial_bg_1 overlay2" style="  background-image: url(@review.Image);">
            <div class="container">
                <div class="row">
                    <div class="col-xl-10 offset-xl-1">
                        <div class="testmonial_info text-center">
                            <div class="quote">
                                <i class="flaticon-straight-quotes"></i>
                            </div>
                            <p>
                                @if (review.ReviewText.Length > 300)
                                {
                                    @review.ReviewText.Substring(0, 300) 
                                }
                                else
                                {
                                    @review.ReviewText
                                }
                            </p>
                            <div class="testmonial_author">
                                <h4>@review.Name <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></h4><br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>
