@page "/contact-us"
@model PayLessPest.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="jumbotron2 jumbotron-sm2">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1">
                    Contact us <small>Feel free to contact us</small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm contactForm">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name" asp-for="customerName">
                                    Name
                                </label>
                                <input type="text" class="form-control" id="name" name="customerName" placeholder="Enter name" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="email" asp-for="customerEmail">
                                    Email Address
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <input type="email" class="form-control" id="email" name="customerEmail" placeholder="Enter email" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    Subject
                                </label>
                                <select id="subject" name="subject" class="form-control" required="required" asp-for="reason">
                                    <option value="na" selected="">Choose One:</option>
                                    <option value="service">General Customer Service</option>
                                    <option value="suggestions">Complaints</option>
                                    <option value="product">Website Issue</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label for="name">
                                    Message
                                </label>
                                <textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required"
                                          placeholder="Message" asp-for="userMessage"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                                Send Message
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>



        <div class="col-md-4">
            <form class="ourOffice">
                <legend><span class="glyphicon glyphicon-globe"></span> Our Contact</legend>
                <address>
                    <strong>Our emails</strong><br>
                    <a href="mailto:info@paylesspest.com">info@paylesspest.com</a>
                    <a href="mailto:billing@paylesspest.com">billing@paylesspest.com</a>
                    <br />
                    <strong>Our Phone Number</strong>
                    <a href="tel:801-809-7533">801-809-7533</a>
                </address>
            </form>
        </div>
    </div>


    <div class="row">
        <div class="col-10 mx-auto">
            <h3>Frequently Asked Questions</h3>
            <div class="accordion" id="faqExample">
                <div class="card">
                    <div class="card-header p-2" id="headingOne">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Q: Do you have any coupons or promotions?
                            </button>
                        </h5>
                    </div>

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#faqExample">
                        <div class="card-body">
                            <b>Answer:</b> It depends on the time of the year but we always try to provide best pricing and services. We do occasionally offer promotions and coupons. <br><br>
                            <a class="btn btn-success" href="/coupon-and-promos" role="button">Current Promotions and Coupons</a>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header p-2" id="headingTwo">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Q: Sample Question?
                            </button>
                        </h5>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#faqExample">
                        <div class="card-body">
                            info will go in here
                        </div>
                    </div>
                </div>
                >
            </div>
        </div>
    </div>

</div>


<style>
    .jumbotron {
        background: #358CCE;
        color: #FFF;
        border-radius: 0px;
    }

    .contactForm {
        padding-top: 30px;
    }
    .ourOffice{
        padding-top: 30px;
    }

    .jumbotron-sm {
        padding-top: 24px;
        padding-bottom: 24px;
    }

    .jumbotron small {
        color: #FFF;
    }

    .jumbotron2 {
        background: #ec1d3b;
        color: #FFF;
        border-radius: 0px;
        padding-top: 30px;
    }

    .jumbotron-sm2 {
        padding-top: 24px;
    }

    .jumbotron2 small {
        color: #FFF;
    }


    .h1 small {
        font-size: 24px;
    }
</style>

