@page "/contact-us"
@model PayLessPest.ContactModel
@{
    ViewData["Title"] = "Contact Us";
    ViewData["Meta"] = "Contacting Pay Less Pest Control has never been easier. Use our contact form, email us, message us, or chat live with us on our website.";
}

<div class="jumbotron2 jumbotron-sm2">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1">
                    Contact us <small>Feel free to contact us</small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">
                                    Name *
                                </label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="userEmail">
                                    Email Address *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <input type="email" name ="email" class="form-control" id="userEmail" placeholder="Enter email" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="phone">
                                    Phone Number
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <input type="tel" class="form-control" name="phone" id="phone" placeholder="Enter email" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    Subject*
                                </label>
                                <select id="subject" name="subject" class="form-control" required="required">
                                    <option value="na" selected="">Choose One:</option>
                                    <option value="General Inquiry">General Customer Service</option>
                                    <option value="Request a Quote">Request a Quote</option>
                                    <option value="Service Question">Service Question</option>
                                    <option value="Other Question">Other Question</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="perferredContact">
                                    Perferred Contact *
                                </label>
                                <select id="perferredContact" name="perferredContact" class="form-control" required="required">
                                    <option value="na" selected="">Choose One:</option>
                                    <option value="Email">Email</option>
                                    <option value="Call">Phone Call</option>
                                    <option value="Text">Text Message *(see side)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="message">
                                    Tell us about your pest problem *
                                </label>
                                <textarea name="message" id="message" class="form-control" rows="14" cols="25" required="required"
                                          placeholder="Message"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                                Send Message
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <form>
                <legend><span class="glyphicon glyphicon-globe"></span> Our office</legend>
                <address>
                    <strong>PayLess Pest Control</strong><br>
                    Servicing Utah Area<br>
                    <abbr title="Phone">
                        P:
                    </abbr>
                    801-809-7533
                </address>
                <address>
                    <strong>Our Emails</strong><br>
                    <a href="mailto:services@paylesspest.com">services@paylesspest.com</a>
                </address>

                <address>
                    <strong>Text Message</strong>
                    <p>Msg & data rates may apply - We do not cover this expense</p>
                </address>
            </form>
        </div>
    </div>
    </div>


    <div class="row">
        <div class="col-10 mx-auto">
            <h3>Frequently Asked Questions</h3>
            <div class="accordion" id="faqExample">
                <div class="card">
                    <div class="d-flex card-header p-2" id="headingOne">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Q: Do you have any coupons or promotions?
                            </button>
                        </h5>
                    </div>

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#faqExample">
                        <div class="card-body">
                            <b>Answer:</b> It depends on the time of the year but we always try to provide best pricing and services. We do occasionally offer promotions and coupons. <br><br>
                            <a class="btn btn-success" href="/coupon-and-promos" role="button">Current Promotions and Coupons</a>
                        </div>
                    </div>
                </div>
            </div>
    </div>

</div>


<style>
    .jumbotron {
        margin-top: 20px;
        background: #358CCE;
        color: #FFF;
        border-radius: 0px;
    }

    .contactForm {
        padding-top: 30px;
    }

    .ourOffice {
        padding-top: 30px;
    }

    .jumbotron-sm {
        padding-top: 24px;
        padding-bottom: 24px;
    }

    .jumbotron small {
        color: #FFF;
    }

    .jumbotron2 {
        background: #ec1d3b;
        color: #FFF;
        border-radius: 0px;
        padding-top: 30px;
    }

    .jumbotron-sm2 {
        padding-top: 24px;
    }

    .jumbotron2 small {
        color: #FFF;
    }


    .h1 small {
        font-size: 24px;
    }
</style>

