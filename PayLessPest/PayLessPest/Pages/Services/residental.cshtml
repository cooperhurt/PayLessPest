<div class="container mt-5">
    <div class="jumbotron2 jumbotron2-sm">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <h1 class="h1">
                        Contact us <small>Dont know what you need? Email us</small>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">
                                    Name *
                                </label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="email">
                                    Email Address *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="phone">
                                    Phone Number
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <input type="tel" class="form-control" name="phone" id="phone" placeholder="Enter Phone" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    Subject*
                                </label>
                                <select id="subject" name="subject" class="form-control" required="required">
                                    <option value="na" selected="">Choose One:</option>
                                    <option value="General Inquiry">General Customer Service</option>
                                    <option value="Request a Quote">Request a Quote</option>
                                    <option value="Service Question">Service Question</option>
                                    <option value="Other Question">Other Question</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    Perferred Contact *
                                </label>
                                <select id="perferredContact" name="perferredContact" class="form-control" required="required">
                                    <option value="na" selected="">Choose One:</option>
                                    <option value="Email">Email</option>
                                    <option value="Call">Phone Call</option>
                                    <option value="Text">Text Message *(see side)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="message">
                                    Tell us about your pest problem *
                                </label>
                                <textarea name="message" id="message" class="form-control" rows="14" cols="25" required="required"
                                          placeholder="Message"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                                Send Message
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
